@echo off
REM Скрипт для запуска команд в виртуальном окружении
REM Использование: run_with_venv.bat "команда"

if "%~1"=="" (
    echo Использование: run_with_venv.bat "команда"
    echo Пример: run_with_venv.bat "python main.py"
    pause
    exit /b 1
)

echo ========================================
echo Запуск команды в виртуальном окружении
echo ========================================

REM Проверяем существование виртуального окружения
if not exist "venv\Scripts\activate.bat" (
    echo ОШИБКА: Виртуальное окружение не найдено!
    echo Создайте виртуальное окружение: python -m venv venv
    pause
    exit /b 1
)

echo Активация виртуального окружения...
call venv\Scripts\activate.bat

echo Выполнение команды: %*
%*

echo ========================================
echo Команда завершена
echo ========================================
pause 